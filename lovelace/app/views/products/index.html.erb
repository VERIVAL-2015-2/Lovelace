<font color="#04B404" <p id="notice"><%= notice %></p></font>

<h1>Produtos cadastrados</h1>

<table>
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Imagem</th>
      <th>Preço</th>
      <th>Quantidade</th>
      <th>Descrição</th>
      <th>Ficha Técnica</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.code %></td>
        <td><%= product.name %></td>
        <td><%= image_tag(product.image.url(:thumb)) %></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
        <td><%= product.description %></td>
        <td><%= product.details %></td>
        <td><%= link_to 'Mostrar', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Deletar', product, method: :delete, data: { confirm: 'Deseja mesmo deletar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar novo produto', new_product_path %>