<title>Lovelace | Produtos</title>

<%= render 'header' %>

<!-- start main -->
<div class="main_bg">
	<div class="wrap">
		<div class="main">
	
			<!-- start grids_of_3 -->
			<div class="grids_of_3">	
				<% @products.each do |product|%>
				<div class="grid1_of_3">				
					<%= link_to image_tag(product.image.url(:medium)), product %>
					<h3><%= product.name %></h3>
					<span class = "price"> R$ <%= product.price %></span>
			  	</div>
				<% end %>
			</div>
			<div class="clear"></div>
		</div>
	</div>
</div>

<%= render 'footer' %>